{{!< default}}

{{#contentFor 'title'}}{{ meta_title }}{{/contentFor}}

{{#post}}
  {{> topper }}

  <article class='c-post {{ post_class }}'>
    {{#if access}}
      {{#if @custom.enable_table_of_contents}}
        {{> table-of-contents }}
      {{/if}}

      {{#has tag='#table-of-content'}}
        {{> table-of-contents }}
      {{/has}}
    {{/if}}

    <div class='c-content {{#unless access}} c-content--has-shadow {{/unless}}'>
      {{ content }}
    </div>

    {{#unless access}}
      {{> upgrade }}
    {{/unless}}

    {{!-- GhostFlow MH - Web Share API --}}
       <a href="#" data-webshare  class="c-webshare-banner plausible-event-name=sharingbanner">
      <img src="{{asset "fonts/dispatch-logo-hero.png"}}" alt="Share logo" class="c-webshare-banner__logo">
      <p class="c-webshare-banner__cta">{{@custom.share_cta}}</p>
    </a>

    <br>

    {{!-- Ghost Native Comments --}}
    <div id="ghost-comments">
      {{> "comments/ghost"}}
    </div>

  </article>
{{/post}}

{{!> related }}

{{> latest }}
