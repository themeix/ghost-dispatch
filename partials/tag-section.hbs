<div class='c-section c-section--{{slug}}'>
  <div class='o-grid'>
    <div class='c-section-heading' style="border-bottom: 2px solid #000; margin-bottom: 2rem;">
      <h2 class='c-section-heading' style="text-transform: uppercase;">{{ name }}</h2>

      <a href='{{ url }}' style="text-transform: uppercase;">
        {{t 'See all'}}
      </a>
    </div>
  </div>

  <div class='o-grid o-grid--4-columns home-latest'>
    {{#get 'posts' filter='tags:{{slug}}' include='tags,authors' limit='4' as |posts|}}
      {{#if posts}}
        {{#foreach posts}}
          {{> card showExcerpt=false }}
        {{/foreach}}
      {{/if}}
    {{/get}}
  </div>
</div>
